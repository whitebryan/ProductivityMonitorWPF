<Page x:Class="ProductivityMonitorWPF.ProcessesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProductivityMonitorWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProcessesPage">

    <Grid Height="450" Width="800">
        <ListBox x:Name="AddedProccesses" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="467,30,59,54"/>
        <ComboBox x:Name="ProccessSelectBox" HorizontalAlignment="Left" Margin="29,63,0,0" VerticalAlignment="Top" Width="372"/>
        <Label Content="Process Select" HorizontalAlignment="Left" Margin="148,21,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="White" FontSize="20"/>
        <Button x:Name="RemoveAddedButton" Content="Stop Tracking" HorizontalAlignment="Left" Margin="467,402,0,0" VerticalAlignment="Top" Height="26" Width="274" FontSize="20" Click="RemoveAddedButton_Click"/>
        <Button x:Name="AddProccess" Content="Start Tracking" HorizontalAlignment="Left" Margin="78,402,0,0" VerticalAlignment="Top" Height="27" Width="274" FontSize="20" Click="AddProccess_Click"/>
    </Grid>
</Page>
